generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  password  String
  isAdmin   Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  Inventory   Inventory[]
  TrackOrders TrackOrder[] // Relation to TrackOrder
}

model Inventory {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  cost        Int
  userId      String?   @db.ObjectId
  user        User?     @relation(fields: [userId], references: [id])
  asPerPlan   Int?
  existing    Int?
  required    Int?
  proInStore  Int?
  itemsShort  Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
  image       String? 
}

model TrackOrder {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  status    String // Order status (e.g., 'Pending', 'Shipped')
  orderCost Int // Cost of the order
  itemName  String // Name of the item
  userName  String // Name of the user
  userId    String?   @db.ObjectId // Optional user ID field to associate with the User model
  user      User?     @relation(fields: [userId], references: [id]) // Relation to the User model
  createdAt DateTime? @default(now()) // Creation time of the order
  updatedAt DateTime? @updatedAt // Last updated time of the order
}
